<% include ../partials/header %>

<section>
  <div>
    <a href="/profiles/new">New Profile</a>
  </div>

  <div class="row">

    <div class="col-sm-6">
      <div class="card">
          <div class="card-body">


            <h5 class="card-title">
              <%= profile.first_name %> <%= profile.last_name %>
            </h5>

            <p>
              <%= profile.age %>
            </p>

            <p>
              <%= profile.program %>
            </p>

            <p>
              <%= profile.autobiography %>
            </p>

            <% if ( profile.details && profile.details.length > 0 ) { %>
              <hr>
              <h6>Additional Details</h6>
              <% for( let detail of profile.details ) { %>
                <p>
                  <strong><%= detail.key %>: </strong>
                  <%= detail.value %>
                </p>
              <% } %>
            <% } %>


            <div class="actions">
              <a href="/profiles/<%= profile.id %>/edit" class="btn btn-primary">
                Edit
              </a>

              <form action="/profiles/<%= profile.id %>/delete" method="post"  onsubmit="return confirm('Are you sure you want to delete this profile?');">
                <input type="hidden" name="id" value="<%= profile.id %>">
                <button type="submit" class="btn btn-danger">DELETE</button>
              </form>
            </div>
          </div>
        </div>
    </div>

  </div>
</section>

<% include ../partials/footer %>
